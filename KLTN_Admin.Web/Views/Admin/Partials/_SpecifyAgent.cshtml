@model AgentForAdminViewModel

<form asp-action="SpecifyAgent" asp-controller="Admin">
    <div class="form-row">
        <div class="col">
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>
        <div class="col">
            <label asp-for="CancelFee"></label>
            <input type="number" asp-for="CancelFee" class="form-control" />
        </div>
    </div>
    <div class="form-radio">
        <div class="form-group">
            <label style="padding-top: 5px;" asp-for="AsRoot"></label>
            <input type="checkbox" asp-for="AsRoot" />
        </div>
    </div>
    <div class="mt-3">
        <input type="submit" class="btn btn-primary" hidden id="btn-add-agent" value="Xong" />
    </div>
</form>